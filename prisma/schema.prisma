datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())  // Use String type for ID
  email     String    @unique
  password  String
  name      String
  classrooms Classroom[] @relation("ClassroomAdmin")
  memberships Membership[]
}

model Classroom {
  id         Int        @id @default(autoincrement())
  name       String
  code       String     @unique
  inviteLink String     @unique
  admin      User       @relation("ClassroomAdmin", fields: [adminId], references: [id])
  adminId    String     // Adjust adminId to String type to match User id
  memberships Membership[]
}

model Membership {
  userId      String   // Use String type for userId
  classroomId Int
  user        User     @relation(fields: [userId], references: [id])
  classroom   Classroom @relation(fields: [classroomId], references: [id])
  @@id([userId, classroomId])
}